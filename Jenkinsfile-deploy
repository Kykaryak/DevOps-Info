pipeline {
    agent { label 'RuVDS' }
    
    stages {
        stage('docker version') {
            steps {
                sh "echo $USER"
                sh 'docker version'
           }
        }
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Kykaryak/devops-info.git'
           }
        }
        stage('Deploy App') {
            steps {
                script {
                    kubernetesDeploy(configs: "devops-info-deployment.yaml", kubeconfigId: "mykubeconfig")
             }      
          }
       }
    }
}
